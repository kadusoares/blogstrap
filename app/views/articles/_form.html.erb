<%= form_with model: article do |form| %>
    <div>
      <%= form.label :title %>
      <%= form.text_field :title %>
       <% article.errors.full_messages(:title).each do |message| %>
         <div> <%= message %> </div>
       <% end %>
    </div>

    <div>
      <%= form.label :body %>
       <%= form.text_field :body %>
        <% article.errors.full_messages(:body).each do |message| %>
       <div> <%= message %> </div>
      <% end %>
    </div>
    
    <div> 
        <%= form.submit %>
    </div>
<% end %>
    
    
    
     
